<div class="modal" id="returnToWorkModal" tabindex="-1" role="dialog">
  <div class="modal-dialog  modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Вернуть в работу?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: job, url: return_to_work_job_path(job), method: "put", id: "return_form") do |f|%>
          <%= f.hidden_field :status_id, value: 2 %>
          <div class="form-group">
            <%= f.label "Комментарий:" %>
            <%= f.text_area :comment, cols: "30", rows: "10", class: "form-control fontsize16", placeholder: "(не обязательно)" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        <button type="submit" id="btn-return" form="return_form" class="btn btn-primary">Вернуть в работу</button>
      </div>
    </div>
  </div>
</div>

<script>
    $('#return_form').on('ajax:error', function(event, xhr, status, error) {
        //https://github.com/rails/jquery-ujs/wiki/ajax
        $("#btn-return").attr("disabled", false);
    }).on('ajax:beforeSend', function(event, xhr, status, error) {
        $("#btn-return").attr("disabled", true);
    });
</script>